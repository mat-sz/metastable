{
  "name": "@metastable/client",
  "displayName": "Metastable",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:start": "vite --mode electron",
    "electron:build": "vite build --mode production-electron && electron-builder"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@metastable/metastable": "*",
    "ansi-to-react": "^6.1.6",
    "clsx": "^2.0.0",
    "filesize": "^10.1.0",
    "fxglue": "^0.2.1",
    "lsrx": "^0.0.2",
    "mobx": "^6.10.2",
    "mobx-react-lite": "^4.0.4",
    "nanoid": "^5.0.4",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-var-ui": "^1.5.0",
    "sass": "^1.66.1",
    "swr": "^2.2.4",
    "typesocket": "^1.1.0",
    "use-context-menu": "^0.4.13"
  },
  "devDependencies": {
    "@metastable/types": "*",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^28.0.0",
    "electron-builder": "24.9.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tree-kill": "^1.2.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
