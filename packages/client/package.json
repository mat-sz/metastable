{
  "name": "@metastable/client",
  "displayName": "Metastable",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "run -T eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:start": "vite --mode electron",
    "electron:build": "vite build --mode production-electron && electron-builder",
    "analyze": "vite-bundle-visualizer"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@metastable/metastable": "*",
    "@tanstack/react-query": "^5.24.1",
    "@trpc/client": "^11.0.0-next-beta.294",
    "@trpc/react-query": "^11.0.0-next-beta.302",
    "ansi-to-react": "^6.1.6",
    "clsx": "^2.0.0",
    "filesize": "^10.1.0",
    "fxglue": "^0.2.1",
    "js-base64": "^3.7.7",
    "mobx": "^6.10.2",
    "mobx-react-lite": "^4.0.4",
    "nanoid": "^5.0.4",
    "radash": "^12.1.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.4.4",
    "react-icons": "^4.11.0",
    "react-use-pointer-drag": "^0.1.2",
    "sass": "^1.66.1",
    "trpc-electron": "^0.1.0",
    "use-context-menu": "^0.4.13"
  },
  "devDependencies": {
    "@metastable/types": "*",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^29.0.1",
    "electron-builder": "24.12.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tree-kill": "^1.2.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-bundle-visualizer": "^1.0.0",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-native": "^0.2.0"
  }
}
